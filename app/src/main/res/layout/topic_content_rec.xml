<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.xiaozhu.View.CustomView.CircleImageView
        android:id="@+id/topic_content_rec_tx"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/tx"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/topic_content_rec_name"
        android:layout_toRightOf="@+id/topic_content_rec_tx"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:text="清风徐来"/>
    <TextView
        android:id="@+id/topic_content_rec_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic_content_rec_tx"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="家乡的山水才是最美的不是么？"/>
    <TextView
        android:id="@+id/topic_content_rec_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic_content_rec_title"
        android:textSize="15sp"
        android:gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:text="走过了无数的山山水水，蓦然回首才发现最美的山水在我们家乡。佛啊说法发生的回复端口是否考虑是否。"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>