<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xiaozhu.View.Fragments.PostingFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/userinfo_head_bg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/xm" />
        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#993F51B5"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/userinfo_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>
       <android.support.design.widget.TabLayout
           android:id="@+id/userinfo_tab"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="200dp">
       </android.support.design.widget.TabLayout>
        <com.example.xiaozhu.View.CustomView.CircleImageView
            android:id="@+id/userinfo_tx"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/tx"
            app:civ_border_width="3dp"
            app:civ_border_color="#ffffff"/>
        <TextView
            android:id="@+id/userinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="岁月如歌"
            android:textStyle="bold"
            android:textSize="25sp"
            android:maxLines="1"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="160dp"/>
        <TextView
            android:id="@+id/userinfo_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="这家伙很懒，什么都没留下，( ▼-▼ )"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="160dp"/>
    </FrameLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/userinfo_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>

