<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.example.xiaozhu.View.CustomView.CircleImageView
    android:id="@+id/recruit_list_tx"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@mipmap/tx"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/recruit_list_sex"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/male_24px"
        android:layout_below="@+id/recruit_list_tx"
        android:layout_marginLeft="32dp"/>
    <TextView
        android:id="@+id/recruit_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="奇穷"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/recruit_list_tx"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/recruit_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这家伙很懒，什么都没留下。。。"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"
        android:gravity="left"
        android:layout_toRightOf="@+id/recruit_list_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/recruit_list_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="80dp"
        android:background="#33000000" />
</RelativeLayout>