<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.Toolbar
    android:id="@+id/reply_content_toolbar"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.example.xiaozhu.View.CustomView.CircleImageView
            android:id="@+id/reply_content_tx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/tx"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/reply_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="花花世界"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/reply_content_tx"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/reply_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个小时前"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/reply_content_tx"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/reply_content_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="哈哈哈哈哈o(^▽^)o"
        android:gravity="left"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#33000000" />
</LinearLayout>