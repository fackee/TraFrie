<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    app:cardCornerRadius="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">
   <ImageView
        android:id="@+id/stra_vtc_gb"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/stra_vtc_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="老城、老味、老潮汕"
            android:textColor="#ffffff"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:textSize="30sp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/stra_vtc_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="24sp"
            android:text="相识相知"
            android:textColor="#c4bfbf" />
        <TextView
            android:id="@+id/stra_vtc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="24sp"
            android:maxLines="2"
            android:text="可是人们却慢慢淡忘了这个最们却慢慢淡忘了这个早开放的城市之." />
        <Button
            android:id="@+id/stra_vtc_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:background="#00000000"
            android:textSize="16dp"
            android:layout_gravity="right"
            android:text="详情"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>