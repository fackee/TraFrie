<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#5677fc">
    </android.support.v7.widget.Toolbar>
    <com.example.xiaozhu.View.CustomView.CircleImageView
        android:id="@+id/ar_tx"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/tx"
        android:layout_below="@+id/ar_toolbar"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/ar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ar_toolbar"
        android:layout_toRightOf="@+id/ar_tx"
        android:text="水月"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/ar_sex"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ar_name"
        android:layout_toRightOf="@+id/ar_tx"
        android:src="@drawable/female_26px"
        />
    <TextView
        android:id="@+id/ar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="就立刻否决了；啊暑假放假啊是发撒法"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_below="@+id/ar_tx"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="left"/>
    <TextView
        android:id="@+id/ar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="就立刻否决了；啊暑假放假啊是发撒法,和覅和覅哈飞和缺乏。发射点发哈松岛枫哈。放松的积分攀升的积分攀升。凡事都。。。"
        android:textSize="16sp"
        android:layout_below="@+id/ar_title"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:gravity="left"/>
    <TextView
        android:id="@+id/ar_stutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ar_content"
        android:text="进行中"
        android:textStyle="italic|bold"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
    <android.support.design.widget.TabLayout
        android:id="@+id/ar_tab"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

    </android.support.design.widget.TabLayout>
    <Button
        android:id="@+id/ar_join"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="申请加入"
        android:textStyle="italic|bold"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:background="#00000000"
        android:gravity="center_vertical|right"/>
</LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/ar_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>